@model Entities.EDMX.Usuario
@{
    ViewBag.Title = "Ingresar";
    Layout = "~/Views/Shared/_baseLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container d-flex justify-content-center mt-3">
        <div class="card">
            <h5 class="card-header unique-color-dark white-text text-center py-4">
                <strong>Ingresar</strong>
            </h5>
            <!-- Card body -->
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form class="form-group">
                    <div class="md-form">
                        <i class="fas fa-envelope prefix"></i>
                        @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control text-capitalize", placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="md-form">
                        <i class="fas fa-lock prefix"></i>
                        @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control text-capitalize", placeholder = "Password" , type = "password"})
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    </div>
                    <div class="container text-center">
                        <button type="submit" class="btn unique-color-dark text-white">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



}
