@model Entities.EDMX.Usuario
@{
    ViewBag.Title = "Ingresar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container d-flex justify-content-center my-5">
        <div class="card">

            <h5 class="card-header unique-color-dark white-text text-center py-4">
                <strong>Ingresar</strong>
            </h5>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <i class="fas fa-envelope prefix"></i>
                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <i class="fas fa-lock prefix"></i>
                    @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control", placeholder = "Password", type = "password" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                @if (ViewBag.Invalido != null && (bool)ViewBag.Invalido)
                {
                    <div class="text-danger">
                        Email y/o Contraseña inválidos
                    </div>
                }

                <div class="container text-center form-ingre">
                    <button type="submit" class="btn unique-color-dark text-white">Ingresar</button>
                </div>
            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/jqueryval")