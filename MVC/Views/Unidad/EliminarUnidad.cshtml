@model Entities.EDMX.Unidad

@{
    ViewBag.Title = "Eliminar Unidad";
}

@{Html.RenderPartial("~/Views/Partials/pv_breadcrump.cshtml");}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-1">

    <h2>Eliminar Unidad</h2>

    <a onclick="volver()" class="btn btn-success">Volver</a>

</div>

<div>
    <p>Confirme la eliminación de la unidad seleccionada</p>
    <hr />


    <article class="d-block text-center align-middle">

        <article class="border rounded bg-light mb-5 mt-3">
            <div class="card-body">
                <h3 class="card-title m-4">¿Desea eliminar la unidad "@Model.Nombre"?</h3>
                <div class="card-text">

                    <p class="text-danger font-weight-bold">
                        Se borrará la unidad y todos sus datos relacionados.
                    </p>

                    <div class="m-4">
                        <form action="/Unidad/EliminarUnidad" method="post">

                            <input type="hidden" name="IdUnidad" value="@Model.IdUnidad" />
                            <input type="hidden" name="Nombre" value="@Model.Nombre" />
                            <input type="hidden" name="IdConsorcio" value="@Model.IdConsorcio" />
                            <input type="submit" value="Eliminar" class="btn btn-danger" />

                            @Html.ActionLink("Cancelar", "VerUnidades", "Unidad", new { id = Model.IdConsorcio }, new { @class = "btn btn-success" })
                        </form>
                    </div>

                </div>
            </div>
        </article>
    </article>

</div>

@Scripts.Render("~/bundles/custom")
